{
  "name": "bespoke",
  "scripts": {
    "build:cli": "cd cli && go build .",
    "build:hooks": "cd hooks && tsc --noResolve",
    "build:modules": "bun run scripts/build.ts",
    "build": "conc -n build-cli,build-hooks,build-modules \"bun run build:cli\" \"bun run build:hooks\" \"bun run build:modules\"",
    "run": "bespoke run --",
    "dev": "bespoke dev && bun run run --remote-debugging-port=9222 --remote-allow-origins=*"
  },
  "dependencies": {},
  "devDependencies": {
    "@elysiajs/cors": "^0.8.0",
    "@swc/core": "^1.4.6",
    "@types/bun": "latest",
    "@types/lodash": "^4.14.202",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "elysia": "^0.8.17",
    "lodash": "^4.17.21",
    "postcss": "^8.4.35",
    "postcss-import": "^16.0.1",
    "postcss-scss": "^4.0.9",
    "tailwindcss": "^3.4.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "private": true
}
